<div class="visits">
  <div class="chart-wrapper">
    <h2 class="chart-header">Summary</h2>
    <div class="summary-container">
      <p class="summary-label">Total Visits: <span class="summary-value"><%= @stats.summary[:total_visits] %></span></p>
      <p class="summary-label">Average Daily Visits: <span class="summary-value"><%= @stats.summary[:avg_daily_visits] %></span></p>
      <p class="summary-label">Median Daily Visits: <span class="summary-value"><%= @stats.summary[:median_daily_visits] %></span></p>
      <p class="summary-label">Max Visits: <span class="summary-value"><%= @stats.summary[:max_visits] %></span></p>
      <p class="summary-label">Min Visits: <span class="summary-value"><%= @stats.summary[:min_visits] %></span></p>
    </div>
  </div>

  <div class="chart-wrapper">
    <h2 class="chart-header">Visits by Date</h2>
    <%= line_chart @stats.by_date, id: "by_date", xtitle: "Date", ytitle: "Number of Visits", curve: false, library: { animation: { duration: 1500, easing: 'easeInQuad', delay: 0, loop: false}, plugins: { title: { display: true, text: 'Visits By Date' } } } %>
  </div>

  <div class="chart-wrapper">
    <h2 class="chart-header">Top 15 Visits by Page</h2>
    <%= bar_chart @stats.by_page, id: "by_page", xtitle: "Number of Visits", ytitle: "URL", library: { animation: { duration: 1500, easing: 'easeInQuad', delay: 0, loop: false}, plugins: { title: { display: true, text: 'Visits by Page' } } } %>
  </div>

  <div class="chart-wrapper">
    <h2 class="chart-header">Top 15 Visits by Referrer</h2>
    <%= bar_chart @stats.by_referrer, id: "by_referrer", xtitle: "Number of Visits", ytitle: "Referrer", library: { animation: { duration: 1500, easing: 'easeInQuad', delay: 0, loop: false}, plugins: { title: { display: true, text: 'Visits by Referrer' } } } %>
  </div>
</div>

<%= javascript_pack_tag 'visit', 'data-turbolinks-track': 'reload' %>